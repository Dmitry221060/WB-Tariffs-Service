{
    "moduleNameMapper": {
        "^src/(.*)": "<rootDir>/src/$1",
        "^test/(.*)": "<rootDir>/test/$1"
    },
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "modulePathIgnorePatterns": [
        "<rootDir>/dist"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "maxWorkers": 1,
    "transform": {
        "^.+\\.(t|j)s$": [
            "ts-jest",
            {
                "transpilation": true
            }
        ]
    },
    "transformIgnorePatterns": [
        "/node_modules/"
    ],
    "collectCoverageFrom": [
        "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
}